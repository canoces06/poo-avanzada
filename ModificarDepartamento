    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try {
        // con un try voy a intentar obtener los datos que ya ingresamos en CrearDepartamento
        String nombreDepartamento = txtNombreDepartamento.getText().trim(); 
        String nuevoNombre = txtNuevoNombre.getText().trim(); 
        

        // Buscar el departamento por nombre
        Departamento departamentoEncontrado = null;
        for (Departamento departamento : listaDepartamentos) {
            if (departamento.getNombreDepartamento().equalsIgnoreCase(nombreDepartamento)) { // aqui hice uso del "ignoreCase" para que no sea caseSensitive
                departamentoEncontrado = departamento;
                break; // detenemos cuando lo encuentre para optimizar tiempos de carga 
            }
        }

        // verificamos con if si se encontró el dpto
        if (departamentoEncontrado == null) {
            JOptionPane.showMessageDialog(this, "Departamento no encontrado.", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }

        // aquí modificamos el/los dptos
        departamentoEncontrado.setNombreDepartamento(nuevoNombre);
        

        // si todo salió bien, mostramos un mensaje que diga que el dpto se modificó sin problemas
        JOptionPane.showMessageDialog(this, "Departamento modificado exitosamente.");
        
    } catch (NumberFormatException e) {
       
        JOptionPane.showMessageDialog(this, "Por favor, ingrese datos válidos.", "Error", JOptionPane.ERROR_MESSAGE);
    }


    }                                        


