    private void btnCrearDptoMouseClicked(java.awt.event.MouseEvent evt) {                                          
        // TODO add your handling code here:

        /*  String texto = txtEntrada.getText().trim();
        if (!texto.isEmpty()) {
        // Agregar el texto al JTextArea
        jTextArea1.append(texto + "\n");
        }
        
        plainTexto.setViewportView(jTextArea1); */
        String texto = txtEntrada.getText().trim();
        if (!texto.isEmpty()) {

            Departamento nuevoDepartamento = new Departamento(texto, 1, listaDepartamentos.size() + 1);
            listaDepartamentos.add(nuevoDepartamento);
            jTextArea1.append("Departamento agregado: " + texto + "\n");
        }
    }                                         


